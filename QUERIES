1. ¿QUIEN ES LA PERSONA QUE LEVANTA MÁS PESO?

SELECT P.NOMBRE, D.PESO
FROM PERSONA P INNER JOIN ENTRENAMIENTOS E 
ON P.ID_PERSONA = E.ID_PERSONA
INNER JOIN DETALLE_ENTRENAMIENTO D 
ON E.ID_ENTRENAMIENTO = D.ID_ENTRENAMIENTO
WHERE D.PESO = (
SELECT MAX(PESO) 
FROM DETALLE_ENTRENAMIENTO
);

2.¿CÚAL ES EL EJERCICIO QUE MÁS REPITE LA GENTE?

SELECT EJ.NOMBRE, COUNT(*) AS VECES_REALIZADO
FROM DETALLE_ENTRENAMIENTO D
INNER JOIN EJERCICIOS EJ
ON D.ID_EJERCICIO = EJ.ID_EJERCICIO
GROUP BY EJ.ID_EJERCICIO, EJ.NOMBRE
ORDER BY VECES_REALIZADO DESC
LIMIT 1;

3. RANKING DE LA PERSONA QUE MÁS ENTRENA A LA QUE MENOS

SELECT P.NOMBRE, COUNT(E.ID_ENTRENAMIENTO) AS NUM_ENTRENAMIENTOS
FROM PERSONA P INNER JOIN ENTRENAMIENTOS E 
ON P.ID_PERSONA = E.ID_PERSONA
WHERE E.ASISTENCIA = 1
GROUP BY P.ID_PERSONA, P.NOMBRE
ORDER BY NUM_ENTRENAMIENTOS DESC;

4.¿QUIEN ES LA PERSONA QUE MÁS REPETICIONES HACE Y CUANTAS HACE?

SELECT P.NOMBRE, COUNT(D.REPETICIONES) AS MAS_REPETICIONES
FROM PERSONA P INNER JOIN ENTRENAMIENTOS E 
ON P.ID_PERSONA = E.ID_PERSONA
INNER JOIN  DETALLE_ENTRENAMIENTO D ON E.ID_ENTRENAMIENTO = D.ID_ENTRENAMIENTO
GROUP BY P.NOMBRE
ORDER BY MAS_REPETICIONES DESC
LIMIT 1;

5. NOMBRE DE LA PERSONA Y TOTAL DE EJERCICIOS POR MUSCULO

SELECT P.NOMBRE, M.NOMBRE, COUNT(EJ.ID_EJERCICIO) AS TOTAL_EJERCICIOS
FROM MUSCULOS M INNER JOIN EJERCICIOS EJ ON M.ID_MUSCULO = EJ.ID_MUSCULO
INNER JOIN DETALLE_ENTRENAMIENTO D ON EJ.ID_EJERCICIO = D.ID_EJERCICIO
INNER JOIN ENTRENAMIENTOS EN ON D.ID_ENTRENAMIENTO = EN.ID_ENTRENAMIENTO
INNER JOIN PERSONA P ON EN.ID_PERSONA = P.ID_PERSONA
GROUP BY P.NOMBRE,M.NOMBRE
ORDER BY P.NOMBRE , TOTAL_EJERCICIOS DESC;

6.RANKING DE DÍAS DE LA SEMANA QUE MÁS SE ENTRENA

SELECT DIA_SEMANA, COUNT(*) AS ASISTENCIAS
FROM ENTRENAMIENTOS 
WHERE ASISTENCIA = TRUE
GROUP BY DIA_SEMANA
ORDER BY ASISTENCIAS DESC;

7.¿CUÁL ES LA CHICA QUE MÁS PESO LEVANTA?

SELECT P.NOMBRE, D.PESO
FROM PERSONA P
JOIN ENTRENAMIENTOS EN ON P.ID_PERSONA = EN.ID_PERSONA
JOIN DETALLE_ENTRENAMIENTO D ON EN.ID_ENTRENAMIENTO = D.ID_ENTRENAMIENTO
WHERE P.GENERO LIKE 'F'
ORDER BY D.PESO DESC
LIMIT 1;

8. ¿CUÁL ES EL CHICO QUE MÁS PESO LEVANTA?

SELECT P.NOMBRE, D.PESO
FROM PERSONA P
JOIN ENTRENAMIENTOS EN ON P.ID_PERSONA = EN.ID_PERSONA
JOIN DETALLE_ENTRENAMIENTO D ON EN.ID_ENTRENAMIENTO = D.ID_ENTRENAMIENTO
WHERE P.GENERO LIKE 'M'
ORDER BY D.PESO DESC
LIMIT 1;

9. ¿EN QUÉ EJERCICIO SE LEVANTA EL MAYOR PESO?

SELECT EJ.NOMBRE, D.PESO
FROM EJERCICIOS EJ INNER JOIN DETALLE_ENTRENAMIENTO D 
ON EJ.ID_EJERCICIO = D.ID_EJERCICIO
ORDER BY D.PESO DESC
LIMIT 1;

10. ¿EN QUÉ EJERCICIO SE LEVANTA EL MENOR PESO?
SELECT EJ.NOMBRE, D.PESO
FROM EJERCICIOS EJ INNER JOIN DETALLE_ENTRENAMIENTO D 
ON EJ.ID_EJERCICIO = D.ID_EJERCICIO
ORDER BY D.PESO ASC
LIMIT 1;

11. ¿QUIEN ES LA PERSONA QUE LEVANTA UN MENOR PESO?

SELECT P.NOMBRE, D.PESO
FROM PERSONA P
JOIN ENTRENAMIENTOS EN ON P.ID_PERSONA = EN.ID_PERSONA
JOIN DETALLE_ENTRENAMIENTO D ON EN.ID_ENTRENAMIENTO = D.ID_ENTRENAMIENTO
ORDER BY D.PESO ASC
LIMIT 1;
